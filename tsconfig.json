{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "strict": true,
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "lib": ["es2017"],
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noEmit": false
  },
  "include": ["./src/**/*.*"],
  "exclude": ["**/node_modules"]
}
