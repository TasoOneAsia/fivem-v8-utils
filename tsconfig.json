{
  "compilerOptions": {
    "outDir": "./lib",
    "strict": true,
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "lib": ["es2017", "DOM"],
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
